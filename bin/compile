#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
#ENV_DIR=$3

BIN="$BUILD_DIR/bin/s3fs"
VERSION=1.82

indent() {
  sed -u 's/^/       /'
}

is_stale() {
# $1 bin
# $2 version
  if [ -f "$1" -a -x "$1" ] && "$1" --version | grep -Fq "$2"; then
    false
  else
    true
  fi
}

fetch() {
# $1 name
# $2 version
  local url cache_file build_dir

  echo "fetching ${1:?} ${2:?}" | indent

  cache_file="$CACHE_DIR/lib/$1-$2.tar.gz"

  if [ ! -f "$cache_file" ]; then
    case "$1" in
      gettext)
        url="https://ftp.gnu.org/pub/gnu/gettext/$1-$2.tar.gz"
        ;;
      fuse)
        url="https://github.com/libfuse/libfuse/archive/$1-$2.tar.gz"
        ;;
      s3fs)
        url="https://github.com/s3fs-fuse/s3fs-fuse/archive/v$2.tar.gz"
        ;;
    esac

    curl -sSL ${url:?} --create-dirs -o "$cache_file"
  fi

  build_dir="/tmp/$1-$2"

  if [ ! -d "$build_dir" ]; then
    mkdir -p "$build_dir"
    tar xz -C "$build_dir" --strip-components=1 "$cache_file"
  fi
}

compile() {
# $1 name
# $2 version
  local cache_dir cache_file build_dir

  echo "compiling ${1:?} ${2:?}" | indent

  cache_dir="$CACHE_DIR/bin"
  cache_file="$cache_dir/$1"

  if [ ! -f "$cache_file" ]; then
    build_dir="/tmp/$1-$2"

    cd "$build_dir"

    case "$1" in
      fuse)
        ./makeconf.sh
        ./configure --disable-kernel-module
        ;;

      s3fs|gettext)
        ./autogen.sh
        ./configure
        ;;
    esac

    make -j 2
    DESTDIR=${cache_dir} make install

    cd -
  fi

  if [ ! -f "$BIN" ]; then
    cp "$cache_file" "$BIN"
  fi
}


# Main

if is_stale "$BIN" "$VERSION"; then
  fetch gettext 0.19.8.1
  compile gettext 0.19.8.1

  fetch fuse 2.9.7
  compile fuse 2.9.7

  fetch s3fs "$VERSION"
  compile s3fs "$VERSION"
fi

exit 0
